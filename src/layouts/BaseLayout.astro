---
import '../styles/global.css';
import '../styles/animations.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'PrismGB - Desktop companion for Mod Retro Chromatic',
  description = 'Stream, capture, and record gameplay from your Chromatic device. Experience your retro games on the big screen with pixel-perfect clarity.',
} = Astro.props;

// Handle canonical URL - use site if configured, otherwise just use pathname
const canonicalUrl = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).href
  : Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <meta
      http-equiv="Content-Security-Policy"
      content="default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self'; object-src 'none'; frame-ancestors 'self'; base-uri 'self'; form-action 'self';"
    />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/Logo.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/icons/gem.svg" />

    <title>{title}</title>

    <!-- Color scheme declaration for dark mode browsers -->
    <meta name="color-scheme" content="dark" />

    <!-- iOS Safari status bar style -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

    <!-- Theme color for mobile browsers (both light and dark system modes) -->
    <meta name="theme-color" content="#0f0f1e" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#0f0f1e" media="(prefers-color-scheme: light)" />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <slot name="header">
      <Header />
    </slot>
    <main id="main-content">
      <slot />
    </main>
    <slot name="footer">
      <Footer />
    </slot>
  </body>
</html>

<style is:global>
  /* Ensure smooth scrolling and account for fixed header */
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 80px;
    scroll-padding-top: calc(80px + env(safe-area-inset-top));
  }

  main {
    position: relative;
    z-index: 1;
  }
</style>
