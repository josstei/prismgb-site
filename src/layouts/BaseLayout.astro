---
import '../styles/global.css';
import '../styles/animations.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'PrismGB - Desktop companion for Mod Retro Chromatic',
  description = 'Stream, capture, and record gameplay from your Chromatic device. Experience your retro games on the big screen with pixel-perfect clarity.',
} = Astro.props;

// Handle canonical URL - use site if configured, otherwise just use pathname
const canonicalUrl = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).href
  : Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <meta
      http-equiv="Content-Security-Policy"
      content="default-src 'self'; script-src 'self' 'unsafe-inline' https://storage.ko-fi.com https://ko-fi.com; style-src 'self' 'unsafe-inline' https://storage.ko-fi.com https://ko-fi.com; img-src 'self' data: https://storage.ko-fi.com https://ko-fi.com https://*.ko-fi.com; font-src 'self' https://storage.ko-fi.com https://ko-fi.com; connect-src 'self' https://ko-fi.com https://*.ko-fi.com; frame-src https://ko-fi.com https://*.ko-fi.com; object-src 'none'; base-uri 'self'; form-action 'self' https://ko-fi.com;"
    />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/Logo.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/icons/gem.svg" />

    <!-- Font preload -->
    <link rel="preload" href="/fonts/JetBrainsMono-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/JetBrainsMono-Bold.woff2" as="font" type="font/woff2" crossorigin />

    <title>{title}</title>

    <!-- Color scheme declaration for browsers (force light to avoid Safari dark iframe painting) -->
    <meta name="color-scheme" content="light" />
    <meta name="supported-color-schemes" content="light" />

    <!-- iOS Safari status bar style -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

    <!-- Theme color for mobile browsers (both light and dark system modes) -->
    <meta name="theme-color" content="#0f0f1e" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#0f0f1e" media="(prefers-color-scheme: light)" />
  </head>
  <body>
    <!-- Atmospheric prismatic orbs -->
    <div class="prismatic-orbs" aria-hidden="true"></div>

    <a href="#main-content" class="skip-link">Skip to main content</a>
    <slot name="header">
      <Header />
    </slot>
    <main id="main-content">
      <slot />
    </main>
    <slot name="footer">
      <Footer />
    </slot>

    <script
      is:inline
      src="https://storage.ko-fi.com/cdn/scripts/overlay-widget.js"
    ></script>
    <script is:inline>
      if (typeof window !== 'undefined') {
        window.kofiWidgetOverlay?.draw('josstei', {
          type: 'floating-chat',
          'floating-chat.donateButton.text': 'Donate',
          'floating-chat.donateButton.background-color': '#ff0080',
          'floating-chat.donateButton.text-color': '#fff'
        });
      }
    </script>
  </body>
</html>

<style is:global>
  /* Ensure smooth scrolling and account for fixed header */
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 80px;
    scroll-padding-top: calc(80px + env(safe-area-inset-top));
  }

  main {
    position: relative;
    z-index: 1;
  }

  /* Keep Ko-fi iframe transparent and isolated to avoid Safari compositing bugs */
  iframe[src*="ko-fi.com"],
  iframe[src*="storage.ko-fi.com"] {
    background: transparent !important;
    border: none !important;
    color-scheme: light !important;
  }

  .kofi-widget-overlay {
    position: fixed !important;
    isolation: isolate;
    transform: none !important;
    filter: none !important;
    backdrop-filter: none !important;
    mix-blend-mode: normal !important;
    opacity: 1 !important;
    will-change: auto !important;
  }

  /* Ensure base elements don't trigger Safari white iframe bug */
  html,
  body {
    transform: none !important;
    filter: none !important;
    backdrop-filter: none !important;
    opacity: 1 !important;
    will-change: auto !important;
  }

  /* Disable body backdrop/filters when Ko-fi is present to avoid Safari iframe whitening */
  /* Force light color scheme to prevent dark-mode painting in Safari */
  html,
  body {
    color-scheme: light !important;
    background-color: var(--bg-primary);
    background: var(--bg-gradient);
  }

</style>
