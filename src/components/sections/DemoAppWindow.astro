---
/**
 * DemoAppWindow - Miniature replica of the actual PrismGB app
 * All CSS values are scaled from the real app at approximately 50%
 */
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class:list={['app-demo', className]} data-demo-app>
  <div class="app-window">
    <video
      class="app-video"
      src="/screen-recording-60fps.mp4"
      aria-label="PrismGB app demo"
      autoplay
      muted
      loop
      playsinline
    ></video>
  </div>
</div>

<style>
  .app-demo {
    flex: 0 0 auto;
    z-index: 2;
  }

  .app-window {
    width: 480px;
    aspect-ratio: 1120 / 608;
    background: var(--bg-gradient);
    border-radius: 0;
    overflow: hidden;
    box-shadow:
      0 0 0 3px var(--accent-20),
      0 0 30px var(--accent-15),
      0 20px 50px rgba(0, 0, 0, 0.5);
    border: 2px solid var(--accent-30);
    transition: box-shadow 0.3s ease, border-color 0.3s ease;
    position: relative;
    contain: layout style paint;
  }

  .app-window::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      repeating-linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.02) 0px,
        transparent 1px,
        transparent 40px,
        rgba(255, 255, 255, 0.02) 41px
      ),
      repeating-linear-gradient(
        0deg,
        rgba(255, 255, 255, 0.02) 0px,
        transparent 1px,
        transparent 40px,
        rgba(255, 255, 255, 0.02) 41px
      );
    pointer-events: none;
    z-index: 0;
  }

  .app-window:hover {
    box-shadow:
      0 0 0 3px var(--accent-30),
      0 0 50px var(--accent-20),
      0 20px 50px rgba(0, 0, 0, 0.55);
    border-color: var(--accent-40);
  }

  .app-video {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    filter: brightness(1.05) contrast(1.05);
  }

  @media (max-width: 900px) {
    .app-window {
      width: 340px;
    }
  }

  @media (max-width: 600px) {
    .app-window {
      width: 280px;
    }
  }
</style>
