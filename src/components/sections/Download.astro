---
import Section from '../common/Section.astro';
import Card from '../common/Card.astro';
import Button from '../common/Button.astro';
import Badge from '../common/Badge.astro';
import Icon from '../common/Icon.astro';

interface Platform {
  name: string;
  icon: string;
  label: string;
  subtitle?: string;
  downloadUrl?: string;
  filename?: string;
}

interface Props {
  version?: string;
  githubUrl?: string;
  platforms?: Platform[];
}

const {
  version = '',
  githubUrl = '#',
  platforms = [],
} = Astro.props;
---

<Section id="download" variant="dark" class="download">
  <div class="download__header">
    <h2 class="download__title">Download</h2>
    <Badge variant="success" dot>v{version} Latest</Badge>
  </div>

  <div class="download__grid">
    {platforms.map((platform, index) => (
      <Card variant="download" class="download__card surface-strong" style={`--delay: ${index * 100}ms`}>
        <div class="download__card-row">
          <div class="download__platform-icon surface-strong">
            <Icon name={platform.icon} size={40} />
          </div>
          <div class="download__card-info">
            <h3 class="download__platform-name">{platform.label}</h3>
            <span class="download__filename">{platform.filename || '\u00A0'}</span>
          </div>
          {platform.downloadUrl ? (
            <Button
              href={platform.downloadUrl}
              variant="primary"
              class="download__button"
            >
              <Icon name="download" size={16} />
              Download
            </Button>
          ) : (
            <Button
              variant="primary"
              class="download__button"
              type="button"
              disabled
            >
              Coming Soon
            </Button>
          )}
        </div>
      </Card>
    ))}
  </div>

  <div class="download__footer">
    <p class="download__note">
      All downloads are free and open source.
    </p>
    <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="download__github">
      <Icon name="github" size={20} />
      View on GitHub
      <Icon name="external-link" size={14} />
    </a>
  </div>
</Section>

<style>
  .download__header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
  }

  /* Rainbow accent bar under title */
  .download__title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    position: relative;
  }

  .download__title::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    border-radius: 2px;
    background: linear-gradient(
      90deg,
      #ff0080 0%,
      #ff8000 25%,
      #00cc66 50%,
      #00aaff 75%,
      #8000ff 100%
    );
    opacity: 0.8;
  }

  .download__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
    width: 100%;
    isolation: isolate;
  }

  :global(.download__card) {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    gap: 0.75rem;
    padding: 2rem;
    height: 100%;
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
  }

  .download__card-row {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    width: 100%;
    gap: 0.5rem;
  }

  .download__card-info {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .download__platform-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    margin-bottom: 0.75rem;
    border-radius: var(--radius-lg);
    color: var(--accent-bright);
    flex-shrink: 0;
  }

  .download__platform-name {
    font-size: 1.25rem;
    margin-bottom: 0;
    color: var(--text-white);
    white-space: nowrap;
  }

  .download__filename {
    display: block;
    font-size: 0.8125rem;
    color: var(--text-muted);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
    margin-bottom: 0.75rem;
  }

  :global(.download__card .download__button) {
    width: 100%;
    white-space: nowrap;
  }

  .download__footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--accent-15);
  }

  .download__note {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin: 0;
  }

  .download__github {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color var(--transition-fast);
  }

  .download__github:hover {
    color: var(--text-white);
  }

  @media (max-width: 768px) {
    .download__grid {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    :global(.download__card) {
      padding: 0.75rem 1rem;
      border-radius: var(--radius-md);
      gap: 0.5rem;
    }

    :global(.download__card:hover) {
      transform: none;
    }

    .download__card-row {
      flex-direction: row;
      align-items: center;
      text-align: left;
      gap: 0.75rem;
    }

    .download__card-info {
      flex: 1;
      align-items: flex-start;
      min-width: 0;
    }

    .download__platform-icon {
      width: 36px;
      height: 36px;
      margin-bottom: 0;
      border-radius: var(--radius-sm);
    }

    .download__platform-icon :global(.icon) {
      width: 20px;
      height: 20px;
    }

    .download__platform-name {
      font-size: 0.9375rem;
      font-weight: 600;
    }

    .download__filename {
      font-size: 0.75rem;
      margin-bottom: 0;
      margin-top: 0.125rem;
    }

    :global(.download__card .download__button) {
      width: auto;
      padding: 0.5rem 0.875rem;
      font-size: 0.8125rem;
      flex-shrink: 0;
    }
  }
</style>
