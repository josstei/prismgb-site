---
import Section from '../common/Section.astro';
import Button from '../common/Button.astro';
import Icon from '../common/Icon.astro';

interface Props {
  tagline?: string;
  description?: string;
}

const {
  tagline = '',
  description = '',
  title = '',
} = Astro.props;
---

<Section id="hero" class="hero">
  <div class="hero__content">
    <div class="hero__icon-wrapper">
      <img
        src="/icons/gem.svg"
        alt="PrismGB icon"
        class="hero__icon"
        width="96"
        height="96"
      />
    </div>

    <img
      src="/Logo.png"
      alt="PrismGB"
      class="hero__logo"
      width="384"
      height="96"
    />

    <h1 class="hero__title">{title}</h1>

    <p class="hero__tagline">{tagline}</p>

    <p class="hero__description">{description}</p>

    <div class="hero__actions">
      <Button href="#download" variant="rainbow" size="lg">
        <Icon name="download" size={18} slot="icon-left" />
        Download Now
      </Button>
      <Button href="#features" variant="secondary" size="lg">
        Learn More
      </Button>
    </div>
  </div>
</Section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 6rem; /* Account for fixed header */
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    padding-top: 6rem;
  }

  .hero__icon-wrapper {
    margin-bottom: 2rem;
    animation: fadeInUp 0.6s ease forwards;
    position: relative;
    will-change: transform;
  }

  /* Float animation applied after initial fade-in */
  .hero__icon-wrapper {
    animation: fadeInUp 0.6s ease forwards, hero-float 4s ease-in-out 0.6s infinite;
  }

  @keyframes hero-float {
    0%, 100% { transform: translateY(0) translateZ(0); }
    50% { transform: translateY(-8px) translateZ(0); }
  }

  /* Rainbow ring around hero icon - GPU optimized */
  .hero__icon-wrapper::before {
    content: '';
    position: absolute;
    top: calc(50% - 4px);
    left: 50%;
    width: 140px;
    height: 140px;
    transform: translate(-50%, -50%) translateZ(0);
    border-radius: 50%;
    background: conic-gradient(
      from 0deg,
      rgba(255, 0, 128, 0.6),
      rgba(255, 100, 0, 0.5),
      rgba(255, 200, 0, 0.4),
      rgba(0, 255, 100, 0.5),
      rgba(0, 180, 255, 0.5),
      rgba(130, 0, 255, 0.6),
      rgba(255, 0, 128, 0.6)
    );
    -webkit-mask: radial-gradient(farthest-side, transparent calc(100% - 3px), #fff calc(100% - 3px));
    mask: radial-gradient(farthest-side, transparent calc(100% - 3px), #fff calc(100% - 3px));
    will-change: transform;
    animation: ring-rotate 12s linear infinite;
    opacity: 0.8;
  }

  /* Outer glow ring - soft blur for ambient glow */
  .hero__icon-wrapper::after {
    content: '';
    position: absolute;
    top: calc(50% - 4px);
    left: 50%;
    width: 160px;
    height: 160px;
    transform: translate(-50%, -50%) translateZ(0);
    border-radius: 50%;
    background: conic-gradient(
      from 180deg,
      rgba(0, 200, 255, 0.3),
      rgba(255, 0, 128, 0.2),
      rgba(130, 0, 255, 0.3),
      rgba(0, 200, 255, 0.3)
    );
    filter: blur(8px);
    will-change: transform;
    animation: ring-rotate 18s linear infinite reverse;
    opacity: 0.5;
  }

  @keyframes ring-rotate {
    from { transform: translate(-50%, -50%) rotate(0deg) translateZ(0); }
    to { transform: translate(-50%, -50%) rotate(360deg) translateZ(0); }
  }

  .hero__icon {
    image-rendering: pixelated;
    image-rendering: crisp-edges;
    filter: drop-shadow(0 0 15px rgba(255, 0, 128, 0.5))
            drop-shadow(0 0 30px rgba(0, 255, 200, 0.25));
    animation: icon-glow 8s ease-in-out infinite;
    position: relative;
    z-index: 1;
  }

  .hero__logo {
    margin-bottom: 1rem;
    animation: fadeInUp 0.6s ease 0.1s forwards;
    opacity: 0;
    image-rendering: pixelated;
    image-rendering: crisp-edges;
    filter: drop-shadow(0 0 10px var(--accent-40));
  }

  .hero__tagline {
    font-size: 1.5rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    animation: fadeInUp 0.6s ease 0.2s forwards;
    opacity: 0;
  }

  .hero__title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin: 0 0 0.75rem 0;
    animation: fadeInUp 0.6s ease 0.15s forwards;
    opacity: 0;
  }

  .hero__description {
    font-size: 1.125rem;
    color: var(--text-muted);
    max-width: 600px;
    margin-bottom: 4rem;
    animation: fadeInUp 0.6s ease 0.3s forwards;
    opacity: 0;
  }

  .hero__actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    animation: fadeInUp 0.6s ease 0.4s forwards;
    opacity: 0;
  }

  @media (max-width: 768px) {
    .hero {
      padding-top: 5rem;
      min-height: auto;
      padding-bottom: 4rem;
    }

    .hero__icon {
      width: 72px;
      height: 72px;
    }

    .hero__logo {
      width: 280px;
      height: auto;
    }

    .hero__tagline {
      font-size: 1.25rem;
    }

    .hero__description {
      font-size: 1rem;
    }

    .hero__actions {
      flex-direction: column;
      width: 100%;
    }

    .hero__actions :global(.btn) {
      width: 100%;
    }
  }
</style>
