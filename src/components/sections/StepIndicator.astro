---
import Icon from '../common/Icon.astro';

interface Step {
  number: number;
  icon?: string;
  image?: string;
  title: string;
  description: string;
}

interface Props {
  steps: Step[];
  class?: string;
}

const { steps, class: className = '' } = Astro.props;
---

<div class:list={['steps', 'steps--horizontal', className]}>
  {steps.map((step, index) => (
    <>
      <div class="step surface-panel" style={`--delay: ${index * 80}ms`}>
        <div class="step__number-ring">
          <span class="step__number">{step.number}</span>
        </div>
        <div class="step__icon-wrapper">
          {step.icon && <Icon name={step.icon} size={28} class="step__icon" />}
          {step.image && <img src={step.image} alt="" class="step__image" />}
        </div>
        <div class="step__content">
          <h3 class="step__title">{step.title}</h3>
          <p class="step__description">{step.description}</p>
        </div>
      </div>
      {index < steps.length - 1 && (
        <div class="step__connector">
          <div class="connector-line"></div>
        </div>
      )}
    </>
  ))}
</div>

<style>
  .steps {
    display: flex;
    flex-direction: row;
    gap: 0;
    align-items: center;
    justify-content: center;
    width: 100%;
  }

  .step {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.75rem;
    padding: 0.625rem 1rem;
    border-radius: var(--radius-full);
    animation: fadeInUp 0.5s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
  }

  .step__number-ring {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: var(--accent-bright);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .step__number {
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--text-white);
  }

  .step__icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: var(--accent-15);
    border-radius: var(--radius-sm);
    flex-shrink: 0;
  }

  .step__icon {
    color: var(--accent-bright);
  }

  .step__image {
    width: 22px;
    height: 22px;
    object-fit: contain;
  }

  .step__content {
    flex: 1;
    min-width: 0;
  }

  .step__title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-white);
    margin: 0 0 0.25rem 0;
    white-space: nowrap;
  }

  .step__description {
    font-size: 0.8125rem;
    color: var(--text-secondary);
    margin: 0;
  }

  .step__connector {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 1rem;
  }

  .connector-line {
    width: 48px;
    height: 2px;
    background: var(--accent-20);
    position: relative;
    overflow: hidden;
    border-radius: 1px;
  }

  .connector-line::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, var(--accent-bright), transparent);
    animation: flowLine 2s ease-in-out infinite;
  }

  @media (max-width: 768px) {
    .steps {
      flex-direction: column;
      gap: 0;
      align-items: stretch;
    }

    .step {
      padding: 0.75rem 1rem;
      border-radius: var(--radius-md);
    }

    .step__connector {
      padding: 0;
      height: 24px;
      width: 100%;
      justify-content: center;
    }

    .connector-line {
      width: 2px;
      height: 100%;
    }

    .connector-line::after {
      animation: flowLineVertical 2s ease-in-out infinite;
    }
  }

  @media (max-width: 480px) {
    .step {
      padding: 0.625rem 0.75rem;
    }

    .step__title {
      font-size: 0.75rem;
    }

    .step__icon-wrapper {
      width: 28px;
      height: 28px;
    }

    .step__connector {
      height: 20px;
    }
  }
</style>
