---
import Button from '../common/Button.astro';
import Icon from '../common/Icon.astro';

interface NavItem {
  label: string;
  href: string;
  external?: boolean;
}

interface Props {
  class?: string;
  navigation?: NavItem[];
}

const { class: className = '', navigation = [] } = Astro.props;
const internalLinks = navigation.filter((item) => !item.external);
const externalLinks = navigation.filter((item) => item.external);
const downloadHref =
  navigation.find((item) => item.label.toLowerCase() === 'download')?.href ||
  '#download';
const githubLink = externalLinks.find((item) => item.label.toLowerCase() === 'github');

const navIconMap: Record<string, string> = {
  'features': 'gem',
  'get started': 'cartridge',
  'download': 'download',
};
const getNavIcon = (label: string) => navIconMap[label.toLowerCase()] || 'arrow-right';

const externalIconMap: Record<string, string> = {
  'github': 'github',
  'ko-fi': 'kofi',
};
const getExternalIcon = (label: string) => externalIconMap[label.toLowerCase()] || 'external-link';
---

<header class:list={['header', className]}>
  <div class="header__container">
    <a href="/" class="header__brand">
      <img
        src="/Logo.png"
        alt="PrismGB"
        class="header__logo"
        width="120"
        height="30"
      />
    </a>

    <nav class="header__nav">
      {internalLinks.map((item) => (
        <a href={item.href} class="header__link">{item.label}</a>
      ))}
    </nav>

    <div class="header__actions">
      <Button href={downloadHref} variant="primary" size="sm">
        Download
      </Button>
      {githubLink && (
        <a href={githubLink.href} target="_blank" rel="noopener noreferrer" class="header__github" aria-label="GitHub">
          <Icon name="github" size={24} />
        </a>
      )}
    </div>

    <button
      class="header__hamburger"
      aria-label="Open navigation menu"
      aria-expanded="false"
      aria-controls="mobileNavWrapper"
      id="mobileToggle"
      type="button"
    >
      <span class="header__hamburger-line"></span>
      <span class="header__hamburger-line"></span>
      <span class="header__hamburger-line"></span>
    </button>
  </div>
</header>

<!-- Mobile Navigation - Outside header to avoid z-index stacking context issues -->
<div class="mobile-nav-wrapper" id="mobileNavWrapper" aria-hidden="true">
  <div class="mobile-nav__overlay" id="mobileNavOverlay"></div>
  <nav class="mobile-nav" id="mobileNav" aria-label="Mobile navigation">
    <div class="mobile-nav__header">
      <img src="/Logo.png" alt="PrismGB" class="mobile-nav__logo" width="100" height="25" />
      <button class="mobile-nav__close" id="mobileNavClose" aria-label="Close navigation menu" type="button">
        <Icon name="close" size={20} />
      </button>
    </div>

    <div class="mobile-nav__content">
      <div class="mobile-nav__section">
        {internalLinks.map((item) => (
          <a href={item.href} class="mobile-nav__link">
            <Icon name={getNavIcon(item.label)} size={20} />
            <span>{item.label}</span>
          </a>
        ))}
      </div>

      {externalLinks.length > 0 && (
        <>
          <div class="mobile-nav__divider"></div>
          <div class="mobile-nav__section">
            {externalLinks.map((item) => (
              <a href={item.href} target="_blank" rel="noopener noreferrer" class="mobile-nav__link mobile-nav__link--external">
                <Icon name={getExternalIcon(item.label)} size={20} />
                <span>{item.label}</span>
              </a>
            ))}
          </div>
        </>
      )}
    </div>
  </nav>
</div>

<style>
  /* ===== Header ===== */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: linear-gradient(
      180deg,
      rgba(26, 26, 46, 0.95) 0%,
      rgba(15, 15, 30, 0.9) 100%
    );
    border-bottom: 1px solid var(--accent-15);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 1rem 2rem;
  }

  .header__brand {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .header__logo {
    height: 32px;
    width: auto;
    max-width: 140px;
    image-rendering: pixelated;
    image-rendering: crisp-edges;
  }

  .header__nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .header__link {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color var(--transition-fast);
    position: relative;
  }

  .header__link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--rainbow-gradient);
    background-size: 200% 100%;
    transition: width var(--transition-fast);
  }

  .header__link:hover {
    color: var(--text-white);
  }

  .header__link:hover::after {
    width: 100%;
  }

  .header__actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .header__github {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.05);
    color: var(--text-primary);
    transition: all var(--transition-fast);
  }

  .header__github:hover {
    border-color: rgba(255, 255, 255, 0.4);
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-white);
  }

  /* ===== Hamburger Button ===== */
  .header__hamburger {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 44px;
    height: 44px;
    gap: 5px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    border-radius: var(--radius-sm);
    transition: background var(--transition-fast);
  }

  .header__hamburger:hover {
    background: var(--accent-10);
  }

  .header__hamburger-line {
    display: block;
    width: 22px;
    height: 2px;
    background: var(--text-primary);
    border-radius: 2px;
    transition: all var(--transition-fast);
    transform-origin: center;
  }

  /* Hamburger to X animation */
  .header__hamburger[aria-expanded="true"] .header__hamburger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .header__hamburger[aria-expanded="true"] .header__hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  .header__hamburger[aria-expanded="true"] .header__hamburger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* ===== Mobile Navigation Wrapper ===== */
  .mobile-nav-wrapper {
    position: fixed;
    inset: 0;
    z-index: 200;
    pointer-events: none;
    visibility: hidden;
  }

  .mobile-nav-wrapper.is-open {
    pointer-events: auto;
    visibility: visible;
  }

  /* ===== Mobile Overlay ===== */
  .mobile-nav__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    opacity: 0;
    transition: opacity var(--transition-medium);
  }

  .mobile-nav-wrapper.is-open .mobile-nav__overlay {
    opacity: 1;
  }

  /* ===== Mobile Navigation Panel ===== */
  .mobile-nav {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: min(300px, 85vw);
    background: var(--bg-primary);
    border-left: 1px solid var(--accent-20);
    transform: translateX(100%);
    transition: transform var(--transition-medium);
    display: flex;
    flex-direction: column;
    overflow-y: auto;
  }

  .mobile-nav-wrapper.is-open .mobile-nav {
    transform: translateX(0);
  }

  .mobile-nav__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--accent-15);
  }

  .mobile-nav__logo {
    height: 28px;
    width: auto;
    image-rendering: pixelated;
    image-rendering: crisp-edges;
  }

  .mobile-nav__close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: transparent;
    border: 1px solid var(--accent-20);
    border-radius: var(--radius-sm);
    color: var(--text-secondary);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .mobile-nav__close:hover {
    background: var(--accent-10);
    border-color: var(--accent-30);
    color: var(--text-white);
  }

  .mobile-nav__content {
    flex: 1;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .mobile-nav__section {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .mobile-nav__link {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .mobile-nav__link:hover,
  .mobile-nav__link:focus {
    color: var(--text-white);
    background: var(--accent-10);
  }

  .mobile-nav__link--external {
    color: var(--text-muted);
  }

  .mobile-nav__divider {
    height: 1px;
    background: var(--accent-15);
    margin: 0.75rem 0;
  }

  /* ===== Responsive ===== */
  @media (max-width: 768px) {
    .header__container {
      padding: 0.75rem 1rem;
    }

    .header__nav,
    .header__actions {
      display: none;
    }

    .header__hamburger {
      display: flex;
    }

    .header__logo {
      height: 28px;
      max-width: 120px;
    }
  }

  @media (min-width: 769px) {
    .mobile-nav-wrapper {
      display: none;
    }
  }
</style>

<script>
  const toggle = document.getElementById('mobileToggle') as HTMLButtonElement | null;
  const wrapper = document.getElementById('mobileNavWrapper');
  const overlay = document.getElementById('mobileNavOverlay');
  const closeBtn = document.getElementById('mobileNavClose');
  const nav = document.getElementById('mobileNav');

  function openMenu() {
    toggle?.setAttribute('aria-expanded', 'true');
    wrapper?.classList.add('is-open');
    wrapper?.setAttribute('aria-hidden', 'false');
    document.body.style.overflow = 'hidden';
    // Focus the close button for accessibility
    closeBtn?.focus();
  }

  function closeMenu() {
    toggle?.setAttribute('aria-expanded', 'false');
    wrapper?.classList.remove('is-open');
    wrapper?.setAttribute('aria-hidden', 'true');
    document.body.style.overflow = '';
    // Return focus to toggle
    toggle?.focus();
  }

  // Toggle button click
  toggle?.addEventListener('click', () => {
    const isOpen = toggle.getAttribute('aria-expanded') === 'true';
    if (isOpen) {
      closeMenu();
    } else {
      openMenu();
    }
  });

  // Close button click
  closeBtn?.addEventListener('click', closeMenu);

  // Overlay click
  overlay?.addEventListener('click', closeMenu);

  // Link clicks
  nav?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', closeMenu);
  });

  // Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && wrapper?.classList.contains('is-open')) {
      closeMenu();
    }
  });
</script>
