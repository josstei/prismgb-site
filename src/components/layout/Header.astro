---
import Button from '../common/Button.astro';
import Icon from '../common/Icon.astro';

interface NavItem {
  label: string;
  href: string;
  external?: boolean;
}

interface Props {
  class?: string;
  navigation?: NavItem[];
}

const { class: className = '', navigation = [] } = Astro.props;
const internalLinks = navigation.filter((item) => !item.external);
const externalLinks = navigation.filter((item) => item.external);
const downloadHref =
  navigation.find((item) => item.label.toLowerCase() === 'download')?.href ||
  '#download';
const githubLink = externalLinks.find((item) => item.label.toLowerCase() === 'github');

const navIconMap: Record<string, string> = {
  'features': 'sparkles',
  'get started': 'rocket',
  'download': 'download',
};
const getNavIcon = (label: string) => navIconMap[label.toLowerCase()] || 'arrow-right';

const externalIconMap: Record<string, string> = {
  'github': 'github',
};
const getExternalIcon = (label: string) => externalIconMap[label.toLowerCase()] || 'external-link';
---

<header class:list={['header', className]}>
  <div class="header__container">
    <a href="/" class="header__brand">
      <img
        src="/Logo.png"
        alt="PrismGB"
        class="header__logo"
        width="128"
        height="32"
      />
    </a>

    <nav class="header__nav">
      {internalLinks.map((item) => (
        <a href={item.href} class="header__link">{item.label}</a>
      ))}
    </nav>

    <div class="header__actions">
      <Button href={downloadHref} variant="rainbow" size="sm">
        Download
      </Button>
      {githubLink && (
        <a href={githubLink.href} target="_blank" rel="noopener noreferrer" class="header__icon-link" aria-label="GitHub">
          <Icon name="github" size={24} />
        </a>
      )}
    </div>

    <button
      class="header__hamburger"
      aria-label="Open navigation menu"
      aria-expanded="false"
      aria-controls="mobileNavWrapper"
      id="mobileToggle"
      type="button"
    >
      <span class="header__hamburger-line"></span>
      <span class="header__hamburger-line"></span>
      <span class="header__hamburger-line"></span>
    </button>
  </div>
</header>

<!-- Mobile Navigation - Outside header to avoid z-index stacking context issues -->
<div class="mobile-nav-wrapper" id="mobileNavWrapper" aria-hidden="true">
  <div class="mobile-nav__overlay" id="mobileNavOverlay"></div>
  <nav class="mobile-nav" id="mobileNav" aria-label="Mobile navigation">
    <div class="mobile-nav__header">
      <img src="/Logo.png" alt="PrismGB" class="mobile-nav__logo" width="112" height="28" />
      <button class="mobile-nav__close" id="mobileNavClose" aria-label="Close navigation menu" type="button">
        <Icon name="close" size={20} />
      </button>
    </div>

    <div class="mobile-nav__content">
      <div class="mobile-nav__section">
        {internalLinks.map((item) => (
          <a href={item.href} class="mobile-nav__link">
            <Icon name={getNavIcon(item.label)} size={20} />
            <span>{item.label}</span>
          </a>
        ))}
      </div>

      {externalLinks.length > 0 && (
        <>
          <div class="mobile-nav__divider"></div>
          <div class="mobile-nav__section">
            {externalLinks.map((item) => (
                <a
                  href={item.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class:list={[
                    'mobile-nav__link',
                    'mobile-nav__link--external',
                  ]}
                >
                  <Icon name={getExternalIcon(item.label)} size={20} />
                  <span>{item.label}</span>
                </a>
              ))}
          </div>
        </>
      )}
    </div>

    <div class="mobile-nav__footer">
      <p class="mobile-nav__footer-text">
        A companion app for the
      </p>
      <a href="https://modretro.com" target="_blank" rel="noopener noreferrer" class="mobile-nav__footer-link">
        <Icon name="chromatic" size={16} />
        <span>Mod Retro Chromatic</span>
      </a>
    </div>
  </nav>
</div>

<style>
  /* ===== Header ===== */
  .header {
    position: fixed;
    top: env(safe-area-inset-top, 0px);
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(26, 26, 46, 0.92);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid transparent;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                background 0.2s ease;
    will-change: transform;
  }

  /* Scroll states */
  .header.is-hidden {
    transform: translateY(-100%);
  }

  .header.is-at-top {
    background: rgba(26, 26, 46, 0.75);
  }

  .header.is-compact .header__container {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .header.is-compact .header__logo {
    height: 24px;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .header {
      transition: none;
    }
    .header.is-hidden {
      transform: none;
      opacity: 0;
      pointer-events: none;
    }
  }

  /* Rainbow gradient border at bottom */
  .header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 0, 128, 0.5) 15%,
      rgba(255, 150, 0, 0.4) 30%,
      rgba(0, 255, 100, 0.4) 50%,
      rgba(0, 180, 255, 0.5) 70%,
      rgba(130, 0, 255, 0.4) 85%,
      transparent 100%
    );
    z-index: 1;
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 1rem 2rem;
    transition: padding 0.2s ease;
  }

  .header__brand {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .header__logo {
    height: 32px;
    width: auto;
    max-width: 140px;
    image-rendering: pixelated;
    image-rendering: crisp-edges;
    transition: filter var(--transition-fast), height 0.2s ease;
  }

  .header__brand:hover .header__logo {
    filter: drop-shadow(0 0 8px rgba(255, 0, 128, 0.5))
            drop-shadow(0 0 16px rgba(0, 200, 255, 0.3));
  }

  .header__nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .header__link {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color var(--transition-fast);
    position: relative;
  }

  .header__link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--rainbow-gradient);
    background-size: 200% 100%;
    transition: width var(--transition-fast);
  }

  .header__link:hover {
    color: var(--text-white);
  }

  .header__link:hover::after {
    width: 100%;
  }

  .header__actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .header__icon-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.05);
    color: var(--text-primary);
    transition: all var(--transition-fast);
    position: relative;
  }

  /* Rainbow ring on hover */
  .header__icon-link::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 50%;
    background: conic-gradient(
      from 0deg,
      rgba(255, 0, 128, 0.6),
      rgba(255, 150, 0, 0.5),
      rgba(0, 255, 100, 0.5),
      rgba(0, 180, 255, 0.6),
      rgba(130, 0, 255, 0.5),
      rgba(255, 0, 128, 0.6)
    );
    -webkit-mask: radial-gradient(farthest-side, transparent calc(100% - 2px), #fff calc(100% - 2px));
    mask: radial-gradient(farthest-side, transparent calc(100% - 2px), #fff calc(100% - 2px));
    opacity: 0;
    transition: opacity var(--transition-fast);
  }

  .header__icon-link:hover {
    border-color: transparent;
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-white);
    box-shadow: 0 0 20px rgba(255, 0, 128, 0.3), 0 0 40px rgba(0, 200, 255, 0.15);
  }

  .header__icon-link:hover::before {
    opacity: 1;
    will-change: transform;
    animation: icon-ring-spin 6s linear infinite;
  }

  @keyframes icon-ring-spin {
    from { transform: rotate(0deg) translateZ(0); }
    to { transform: rotate(360deg) translateZ(0); }
  }

  /* ===== Hamburger Button ===== */
  .header__hamburger {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 44px;
    height: 44px;
    gap: 5px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    border-radius: var(--radius-sm);
    transition: background var(--transition-fast);
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }

  .header__hamburger:hover {
    background: var(--accent-10);
  }

  .header__hamburger-line {
    display: block;
    width: 22px;
    height: 2px;
    background: var(--text-primary);
    border-radius: 2px;
    transition: all var(--transition-fast);
    transform-origin: center;
  }

  /* Hamburger to X animation */
  .header__hamburger[aria-expanded="true"] .header__hamburger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .header__hamburger[aria-expanded="true"] .header__hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  .header__hamburger[aria-expanded="true"] .header__hamburger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* ===== Mobile Navigation Wrapper ===== */
  .mobile-nav-wrapper {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 200;
    pointer-events: none;
    opacity: 0;
    transition: opacity var(--transition-medium);
  }

  .mobile-nav-wrapper.is-open {
    pointer-events: auto;
    opacity: 1;
  }

  /* ===== Mobile Overlay ===== */
  .mobile-nav__overlay {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.7);
    -webkit-tap-highlight-color: transparent;
    cursor: pointer;
  }

  /* ===== Mobile Navigation Panel ===== */
  .mobile-nav {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: min(300px, 85vw);
    background: var(--bg-primary);
    border-left: 2px solid transparent;
    transform: translateX(100%);
    transition: transform var(--transition-medium);
    display: flex;
    flex-direction: column;
    overflow-y: auto;
  }

  /* Rainbow gradient left border */
  .mobile-nav::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(
      180deg,
      rgba(255, 0, 128, 0.7) 0%,
      rgba(255, 150, 0, 0.6) 20%,
      rgba(0, 255, 100, 0.6) 40%,
      rgba(0, 180, 255, 0.7) 60%,
      rgba(130, 0, 255, 0.6) 80%,
      rgba(255, 0, 128, 0.7) 100%
    );
  }

  .mobile-nav-wrapper.is-open .mobile-nav {
    transform: translateX(0);
  }

  .mobile-nav__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid transparent;
    position: relative;
  }

  /* Rainbow border under header */
  .mobile-nav__header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 1rem;
    right: 1rem;
    height: 1px;
    background: linear-gradient(
      90deg,
      rgba(255, 0, 128, 0.5),
      rgba(255, 150, 0, 0.4),
      rgba(0, 255, 100, 0.4),
      rgba(0, 180, 255, 0.5),
      rgba(130, 0, 255, 0.4)
    );
  }

  .mobile-nav__logo {
    height: 28px;
    width: auto;
    image-rendering: pixelated;
    image-rendering: crisp-edges;
  }

  .mobile-nav__close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: transparent;
    border: 1px solid var(--accent-20);
    border-radius: var(--radius-sm);
    color: var(--accent-light);
    cursor: pointer;
    transition: all var(--transition-fast);
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
    position: relative;
  }

  /* Rainbow border on hover */
  .mobile-nav__close::before {
    content: '';
    position: absolute;
    inset: -1px;
    border-radius: inherit;
    padding: 1px;
    background: linear-gradient(
      135deg,
      rgba(255, 0, 128, 0.7),
      rgba(0, 200, 255, 0.7),
      rgba(130, 0, 255, 0.7)
    );
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity var(--transition-fast);
  }

  .mobile-nav__close :global(.icon) {
    color: var(--accent-light);
  }

  .mobile-nav__close:hover {
    background: var(--accent-10);
    border-color: transparent;
    color: var(--accent-bright);
  }

  .mobile-nav__close:hover::before {
    opacity: 1;
  }

  .mobile-nav__close:hover :global(.icon) {
    color: var(--accent-bright);
  }

  .mobile-nav__content {
    flex: 1;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .mobile-nav__section {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .mobile-nav__link {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
    position: relative;
    border-left: 2px solid transparent;
    opacity: 0;
    transform: translateX(20px);
  }

  .mobile-nav-wrapper.is-open .mobile-nav__link {
    animation: slideInLink 0.3s ease forwards;
  }

  .mobile-nav__section .mobile-nav__link:nth-child(1) { animation-delay: 0.1s; }
  .mobile-nav__section .mobile-nav__link:nth-child(2) { animation-delay: 0.15s; }
  .mobile-nav__section .mobile-nav__link:nth-child(3) { animation-delay: 0.2s; }
  .mobile-nav__section .mobile-nav__link:nth-child(4) { animation-delay: 0.25s; }

  @keyframes slideInLink {
    to {
      opacity: 1;
      transform: translateX(0) translateZ(0);
    }
  }

  .mobile-nav__link:hover,
  .mobile-nav__link:focus {
    color: var(--text-white);
    background: var(--accent-10);
    border-left-color: var(--accent-bright);
  }

  .mobile-nav__link--external {
    color: var(--text-muted);
  }

  /* Purple accent for inline SVG icons */
  .mobile-nav__link > :global(svg.icon) {
    color: var(--accent-light);
  }

  .mobile-nav__link:hover > :global(svg.icon),
  .mobile-nav__link:focus > :global(svg.icon) {
    color: var(--accent-bright);
  }

  .mobile-nav__divider {
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 0, 128, 0.4) 20%,
      rgba(0, 200, 255, 0.4) 50%,
      rgba(130, 0, 255, 0.4) 80%,
      transparent 100%
    );
    margin: 0.75rem 0;
  }

  .mobile-nav__footer {
    margin-top: auto;
    padding: 1rem 1.25rem;
    border-top: 1px solid transparent;
    text-align: center;
    position: relative;
  }

  .mobile-nav__footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 1rem;
    right: 1rem;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 0, 128, 0.4) 20%,
      rgba(0, 200, 255, 0.4) 50%,
      rgba(130, 0, 255, 0.4) 80%,
      transparent 100%
    );
  }

  .mobile-nav__footer-text {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }

  .mobile-nav__footer-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--accent-light);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .mobile-nav__footer-link:hover {
    color: var(--accent-bright);
  }

  .mobile-nav__footer-link :global(.icon) {
    color: var(--accent-light);
  }

  .mobile-nav__footer-link:hover :global(.icon) {
    color: var(--accent-bright);
  }

  /* ===== Responsive ===== */
  @media (max-width: 768px) {
    .header__container {
      padding: 0.75rem 1rem;
    }

    .header__nav,
    .header__actions {
      display: none;
    }

    .header__hamburger {
      display: flex;
    }

    .header__logo {
      height: 28px;
      max-width: 120px;
    }

    /* Mobile compact mode */
    .header.is-compact .header__container {
      padding: 0.5rem 1rem;
    }

    .header.is-compact .header__logo {
      height: 22px;
    }
  }

  @media (min-width: 769px) {
    .mobile-nav-wrapper {
      display: none;
    }
  }
</style>

<script src="/scripts/mobile-nav.js" defer></script>
