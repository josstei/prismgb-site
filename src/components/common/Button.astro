---
interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'rainbow';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
  target?: string;
  rel?: string;
  type?: 'button' | 'submit' | 'reset';
}

const {
  variant = 'primary',
  size = 'md',
  href,
  class: className = '',
  target,
  rel,
  type = 'button',
} = Astro.props;

const Element = href ? 'a' : 'button';

const variantClasses = {
  primary: 'btn--primary',
  secondary: 'btn--secondary',
  outline: 'btn--outline',
  rainbow: 'btn--rainbow',
};

const sizeClasses = {
  sm: 'btn--sm',
  md: '',
  lg: 'btn--lg',
};
---

<Element
  href={href}
  target={target}
  rel={rel}
  type={Element === 'button' ? type : undefined}
  class:list={['btn', variantClasses[variant], sizeClasses[size], className]}
>
  <slot name="icon-left" />
  <slot />
  <slot name="icon-right" />
</Element>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
    white-space: nowrap;
    position: relative;
    overflow: hidden;
    text-decoration: none;
  }

  /* Shimmer effect */
  .btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: left 0.5s;
  }

  .btn:hover::before {
    left: 100%;
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
  }

  .btn:active {
    transform: translateY(0);
  }

  /* Sizes */
  .btn--sm {
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
  }

  .btn--lg {
    padding: 1rem 2rem;
    font-size: 1rem;
  }

  /* Variants */
  .btn--primary {
    background: linear-gradient(135deg, var(--accent-bright) 0%, var(--accent-medium) 100%);
    color: white;
    box-shadow: var(--shadow-glow);
  }

  .btn--primary:hover {
    background: linear-gradient(135deg, var(--accent-medium) 0%, var(--accent-dark) 100%);
    box-shadow: var(--shadow-glow-prismatic);
    text-shadow:
      -1px 0 rgba(255, 0, 128, 0.3),
      1px 0 rgba(0, 255, 255, 0.3);
  }

  .btn--secondary {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.05) 100%
    );
    color: var(--text-primary);
    border: 2px solid var(--accent-30);
  }

  .btn--secondary:hover {
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.08) 100%
    );
    border-color: var(--accent-50);
  }

  .btn--outline {
    background: transparent;
    color: var(--accent-bright);
    border: 2px solid var(--accent-bright);
  }

  .btn--outline:hover {
    background: var(--accent-10);
    border-color: var(--accent-light);
    color: var(--accent-light);
  }

  /* Rainbow button - animated gradient */
  .btn--rainbow {
    background: linear-gradient(
      135deg,
      #ff0080 0%,
      #ff4000 20%,
      #ff8000 35%,
      #00cc66 50%,
      #00aaff 70%,
      #8000ff 90%,
      #ff0080 100%
    );
    background-size: 200% 200%;
    color: white;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    box-shadow:
      0 4px 20px rgba(255, 0, 128, 0.3),
      0 0 40px rgba(0, 200, 255, 0.1);
    animation: rainbow-shift 5s ease infinite;
  }

  .btn--rainbow:hover {
    filter: brightness(1.1) saturate(1.1);
    box-shadow:
      0 6px 30px rgba(255, 0, 128, 0.4),
      0 0 60px rgba(0, 200, 255, 0.2);
    text-shadow:
      -1px 0 rgba(255, 0, 128, 0.5),
      1px 0 rgba(0, 255, 255, 0.5),
      0 1px 2px rgba(0, 0, 0, 0.3);
  }

  @keyframes rainbow-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @media (max-width: 768px) {
    .btn--lg {
      padding: 0.875rem 1.5rem;
    }
  }
</style>
