const svgContent = icons[name] || icons['info'];
---

{isExternal ? (
  <img
    class:list={['icon', className]}
    src={externalIcons[name]}
    width={resolvedSize}
    height={resolvedSize}
    alt=""
    aria-hidden="true"
  />
) : (
  <svg
    class:list={['icon', className]}
    width={resolvedSize}
    height={resolvedSize}
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    aria-hidden="true"
    set:html={svgContent}
  />
)}

<style>
  .icon {
